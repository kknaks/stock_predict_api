# ===========================================
# Stock Predict API - Environment Variables
# ===========================================
# 이 파일을 복사하여 .env 파일을 만드세요:
# cp .env.example .env

# -------------------------------------------
# API Server
# -------------------------------------------
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
MASTER_SECRET_KEY=iamnotmaster

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=15432
DB_NAME=stock_predict
DB_USER=postgres
DB_PASSWORD=postgres
DB_ECHO=False

# Docker 네트워크 사용 여부
DB_USE_DOCKER_NETWORK=True
DB_DOCKER_HOST=stock-predict-db

# -------------------------------------------
# JWT Authentication
# -------------------------------------------
# 프로덕션에서는 반드시 안전한 랜덤 키로 변경!
# 생성 방법: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=kknaksearnmoney
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===========================================
# Kafka / Redpanda - stock-predict-network
# ===========================================
# 외부 접속용 (로컬에서 개발 시)
KAFKA_BOOTSTRAP_SERVERS=localhost:19092

# 내부 접속용 (Docker 컨테이너 내부에서 실행 시)
KAFKA_BOOTSTRAP_SERVERS_INTERNAL=redpanda-0:9092,redpanda-1:9092,redpanda-2:9092

# Docker 내부 주소 사용 여부 (Docker 컨테이너 안에서 실행 시 true)
KAFKA_USE_INTERNAL=True

# Consumer 설정
KAFKA_GROUP_ID=api-server-group
KAFKA_AUTO_OFFSET_RESET=latest
KAFKA_ENABLE_AUTO_COMMIT=true
KAFKA_MAX_POLL_RECORDS=100

# 토픽 이름
DAILY_STRATEGY=daily_strategy


# -------------------------------------------
# CORS (JSON 배열 형식)
# -------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]
